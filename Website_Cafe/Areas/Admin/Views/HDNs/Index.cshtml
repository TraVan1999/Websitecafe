@model IEnumerable<Website_Cafe.Models.HDN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/_LayoutAdmin1.cshtml";
}

<h2>Hóa đơn nhập</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table table-bordered table-striped "id="example" style="width:100%;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tenNV)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ngayNhap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tongtien)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.tenNV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ngayNhap)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.tongtien)*@
                    <span>@string.Format("{0:#,##0}", item.tongtien)</span>
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.maHDN }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.maHDN }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.maHDN })
                </td>
            </tr>
        }
    </tbody>
</table>
